<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Allow app to lock the device -->
        <force-lock />
        <!-- Allow app to set password requirements -->
        <limit-password />
        <!-- Allow app to disable camera during focus -->
        <disable-camera />
        <!-- Prevent app uninstallation during focus -->
        <disable-apps />
        <!-- Control device encryption -->
        <encrypted-storage />
    </uses-policies>
</device-admin>